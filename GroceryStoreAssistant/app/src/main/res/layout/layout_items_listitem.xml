<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/parent_grocery_list_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/grocery_list_item_image"
        android:src="@mipmap/ic_launcher">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/layout_grocery_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/grocery_list_item_image"
        android:text="Apple"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <!-- Aisle -->
    <ImageView
        android:id="@+id/grocery_item_icon_location"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:srcCompat="@drawable/ic_item_location"
    android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/grocery_list_item_image"

        />

    <TextView
        android:id="@+id/layout_grocery_item_aisle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/grocery_item_icon_location"
        android:text="Aisle 1"
        android:textColor="#000"
        android:textSize="12sp" />
    <!-- Aisle -->

    <!-- Price -->
    <ImageView
        android:id="@+id/grocery_item_icon_price"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:srcCompat="@drawable/ic_item_price"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/grocery_list_item_image"
        />

    <TextView
        android:id="@+id/layout_grocery_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/grocery_item_icon_price"
        android:text="$10.00"
        android:textColor="#000"
        android:textSize="12sp" />
    <!-- Price -->

    <!-- On Sale -->
    <ImageView
        android:id="@+id/grocery_item_icon_sale"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:srcCompat="@drawable/ic_item_sale"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/grocery_list_item_image"
        />

    <TextView
        android:id="@+id/layout_grocery_item_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@+id/grocery_item_icon_sale"
        android:text="On Sale"
        android:textColor="#000"
        android:textSize="12sp" />
    <!-- Sale -->




</RelativeLayout>